from pymongo import MongoClient
import json
from datetime import datetime

def check_mongo_connection(client):
    """–ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ MongoDB"""
    try:
        client.server_info()
        return True
    except Exception as e:
        return False

def setup_mongodb_database():
    """–ù–∞—Å—Ç—Ä–æ–π–∫–∞ MongoDB –∏ –∑–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö —Å –ø—Ä–∞–≤–∏–ª—å–Ω—ã–º–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏"""
    
    mongo_client = None
    
    try:
        # –°–Ω–∞—á–∞–ª–∞ –ø—Ä–æ–±—É–µ–º –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è —á–µ—Ä–µ–∑ localhost
        print("üîó –ü–æ–ø—ã—Ç–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ MongoDB —á–µ—Ä–µ–∑ localhost...")
        mongo_client = MongoClient('mongodb://mongouser:mongopass@localhost:27017/')
        if check_mongo_connection(mongo_client):
            print("‚úÖ –£—Å–ø–µ—à–Ω–æ–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ MongoDB —á–µ—Ä–µ–∑ localhost")
        else:
            raise Exception("–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è —á–µ—Ä–µ–∑ localhost")
    except:
        try:
            # –ï—Å–ª–∏ –Ω–µ —Ä–∞–±–æ—Ç–∞–µ—Ç —á–µ—Ä–µ–∑ localhost, –ø—Ä–æ–±—É–µ–º —á–µ—Ä–µ–∑ docker —Å–µ—Ä–≤–∏—Å
            print("üîó –ü–æ–ø—ã—Ç–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è –∫ MongoDB —á–µ—Ä–µ–∑ docker —Å–µ—Ä–≤–∏—Å...")
            mongo_client = MongoClient('mongodb://mongouser:mongopass@mongodb:27017/')
            if check_mongo_connection(mongo_client):
                print("‚úÖ –£—Å–ø–µ—à–Ω–æ–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ MongoDB —á–µ—Ä–µ–∑ docker —Å–µ—Ä–≤–∏—Å")
            else:
                raise Exception("–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è —á–µ—Ä–µ–∑ docker —Å–µ—Ä–≤–∏—Å")
        except:
            print("‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è –∫ MongoDB")
            print("–ü—Ä–æ–≤–µ—Ä—å—Ç–µ, —á—Ç–æ MongoDB –∑–∞–ø—É—â–µ–Ω: docker compose ps")
            return None

    if mongo_client:
        try:
            # –ò—Å–ø–æ–ª—å–∑—É–µ–º –±–∞–∑—É –¥–∞–Ω–Ω—ã—Ö studmongo –∫–∞–∫ —É–∫–∞–∑–∞–Ω–æ
            mongo_db = mongo_client['studmongo']
            
            # –û—á–∏—Å—Ç–∫–∞ –∫–æ–ª–ª–µ–∫—Ü–∏–π
            print("üóëÔ∏è –û—á–∏—Å—Ç–∫–∞ —Å—Ç–∞—Ä—ã—Ö –∫–æ–ª–ª–µ–∫—Ü–∏–π...")
            mongo_db.shipments.drop()
            print("‚úÖ –ö–æ–ª–ª–µ–∫—Ü–∏—è shipments –æ—á–∏—â–µ–Ω–∞")
            
            # –ó–∞–≥—Ä—É–∑–∫–∞ —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö
            with open('data/01_generated_data.json', 'r', encoding='utf-8') as f:
                data = json.load(f)
            
            # –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö –¥–ª—è MongoDB —Å –≤–ª–æ–∂–µ–Ω–Ω—ã–º–∏ –¥–æ–∫—É–º–µ–Ω—Ç–∞–º–∏
            print("üì• –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –¥–∞–Ω–Ω—ã—Ö –¥–ª—è MongoDB...")
            
            # –°–æ–∑–¥–∞–µ–º —Å–ª–æ–≤–∞—Ä–∏ –¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ –¥–æ—Å—Ç—É–ø–∞
            warehouses_dict = {w['id']: w for w in data['warehouses']}
            routes_dict = {r['id']: r for r in data['routes']}
            
            # –°–æ–∑–¥–∞–µ–º –¥–æ–∫—É–º–µ–Ω—Ç—ã –≥—Ä—É–∑–æ–≤ —Å –≤–ª–æ–∂–µ–Ω–Ω–æ–π –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–µ–π
            shipments_docs = []
            for shipment in data['shipments']:
                warehouse_from = warehouses_dict[shipment['warehouse_from_id']]
                warehouse_to = warehouses_dict[shipment['warehouse_to_id']]
                route = routes_dict[shipment['route_id']]
                
                shipment_doc = {
                    '_id': shipment['id'],
                    'tracking_number': shipment['tracking_number'],
                    'warehouse_from': {
                        'id': warehouse_from['id'],
                        'name': warehouse_from['name'],
                        'city': warehouse_from['city'],
                        'type': warehouse_from['type'],
                        'capacity': warehouse_from['capacity'],
                        'employees': warehouse_from['employees'],
                        'latitude': warehouse_from['latitude'],
                        'longitude': warehouse_from['longitude']
                    },
                    'warehouse_to': {
                        'id': warehouse_to['id'],
                        'name': warehouse_to['name'],
                        'city': warehouse_to['city'],
                        'type': warehouse_to['type'],
                        'capacity': warehouse_to['capacity'],
                        'employees': warehouse_to['employees'],
                        'latitude': warehouse_to['latitude'],
                        'longitude': warehouse_to['longitude']
                    },
                    'route': {
                        'id': route['id'],
                        'name': route['name'],
                        'start_city': route['start_city'],
                        'end_city': route['end_city'],
                        'distance': route['distance'],
                        'duration_hours': route['duration_hours'],
                        'transport_type': route['transport_type'],
                        'status': route['status'],
                        'cost_per_km': route['cost_per_km']
                    },
                    'weight': shipment['weight'],
                    'volume': shipment['volume'],
                    'value': shipment['value'],
                    'shipment_date': shipment['shipment_date'],
                    'delivery_date': shipment['delivery_date'],
                    'status': shipment['status'],
                    'type': shipment['type'],
                    'priority': shipment['priority']
                }
                shipments_docs.append(shipment_doc)
            
            # –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö –≤ MongoDB
            print("üì• –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö –≤ MongoDB...")
            result = mongo_db.shipments.insert_many(shipments_docs)
            print(f"‚úÖ –ó–∞–≥—Ä—É–∂–µ–Ω–æ {len(result.inserted_ids)} –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤ –≤ MongoDB")
            
            # –°–æ–∑–¥–∞–Ω–∏–µ –∏–Ω–¥–µ–∫—Å–æ–≤
            print("üîç –°–æ–∑–¥–∞–Ω–∏–µ –∏–Ω–¥–µ–∫—Å–æ–≤...")
            mongo_db.shipments.create_index("tracking_number")
            mongo_db.shipments.create_index("status")
            mongo_db.shipments.create_index("shipment_date")
            mongo_db.shipments.create_index("warehouse_from.city")
            mongo_db.shipments.create_index("warehouse_to.city")
            mongo_db.shipments.create_index("route.start_city")
            mongo_db.shipments.create_index("route.end_city")
            print("‚úÖ –ò–Ω–¥–µ–∫—Å—ã —Å–æ–∑–¥–∞–Ω—ã")
            
            # –ü–æ–ª—É—á–µ–Ω–∏–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –∫–æ–ª–ª–µ–∫—Ü–∏–∏
            stats = mongo_db.command("collstats", "shipments")
            collection_size_mb = stats['size'] / (1024 * 1024)
            storage_size_mb = stats['storageSize'] / (1024 * 1024)
            
            print(f"üíæ –†–∞–∑–º–µ—Ä –∫–æ–ª–ª–µ–∫—Ü–∏–∏: {collection_size_mb:.2f} MB")
            print(f"üíæ –†–∞–∑–º–µ—Ä —Ö—Ä–∞–Ω–∏–ª–∏—â–∞: {storage_size_mb:.2f} MB")
            
            # –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –º–µ—Ç–∞–¥–∞–Ω–Ω—ã—Ö
            mongodb_metadata = {
                'setup_time': datetime.now().isoformat(),
                'connection': {
                    'host': 'localhost',
                    'database': 'studmongo',
                    'user': 'mongouser'
                },
                'collections': {
                    'shipments': {
                        'count': len(shipments_docs),
                        'size_mb': round(collection_size_mb, 2),
                        'storage_size_mb': round(storage_size_mb, 2),
                        'avg_object_size': stats.get('avgObjSize', 0),
                        'total_index_size_mb': round(stats.get('totalIndexSize', 0) / (1024 * 1024), 2)
                    }
                },
                'indexes_created': [
                    'tracking_number',
                    'status', 
                    'shipment_date',
                    'warehouse_from.city',
                    'warehouse_to.city',
                    'route.start_city',
                    'route.end_city'
                ],
                'data_structure': '–î–æ–∫—É–º–µ–Ω—Ç–Ω–∞—è —Å –≤–ª–æ–∂–µ–Ω–Ω—ã–º–∏ –æ–±—ä–µ–∫—Ç–∞–º–∏',
                'status': 'success'
            }
            
            with open('data/03_mongodb_metadata.json', 'w', encoding='utf-8') as f:
                json.dump(mongodb_metadata, f, ensure_ascii=False, indent=2)
            
            print("‚úÖ –ú–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –≤ data/03_mongodb_metadata.json")
            
            mongo_client.close()
            return mongodb_metadata
            
        except Exception as e:
            print(f"‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Ä–∞–±–æ—Ç–µ —Å MongoDB: {e}")
            import traceback
            traceback.print_exc()
            return None

if __name__ == "__main__":
    setup_mongodb_database()
